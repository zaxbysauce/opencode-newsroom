{
  "name": "opencode-newsroom",
  "version": "1.0.0",
  "description": "Multi-agent writing swarm plugin for OpenCode - newsroom editorial pipeline with AI-detection avoidance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "opencode-newsroom": "./dist/cli/index.js"
  },
  "type": "module",
  "license": "MIT",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "ai",
    "agents",
    "writing",
    "newsroom",
    "multi-agent",
    "llm"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun build src/cli/index.ts --outdir dist/cli --target bun --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check --write .",
    "dev": "bun run build && opencode",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.53",
    "@opencode-ai/sdk": "^1.1.53",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "bun-types": "latest",
    "typescript": "^5.7.3"
  }
}
